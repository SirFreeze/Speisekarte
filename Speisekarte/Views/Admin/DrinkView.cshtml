@using Speisekarte.Models.Admin
@using Speisekarte.Entities
@model DrinkModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Menu View</title>
    <script>
        $(document).ready(function () {

        })
    </script>
</head>
<body>
    <div>
        <h1>Trinken Bearbeiten</h1>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th class="viewtd">Name</th>
                    <th class="viewtd">Kosten</th>
                    <th class="viewtd"><span style="margin-left: 13px" class="glyphicon glyphicon-pencil"></span></th>
                    <th class="viewtd"><span style="margin-left: 13px" class="glyphicon glyphicon-remove"></span></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Drink drink in Model.Drinks)
                {
                    <tr>
                        <td class="viewtd">@drink.Name</td>
                        <td class="viewtd">@drink.Cost</td>
                        <td class="viewtd"><button type="button" class="btn btn-primary editButton" onclick="location.href='@Url.Action("EditDrink", "Admin", new { id=drink.ID })'"><span class="glyphicon glyphicon-pencil"></span></button></td>
                        <td class="viewtd"><button type="button" class="btn btn-danger removeButton" onclick="if(window.confirm('Trinken @drink.Name wirklich löschen?')){location.href='@Url.Action("RemoveDrink", "Admin", new { id=drink.ID })'}"><span class="glyphicon glyphicon-remove"></span></button></td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("AddDrink", "Admin")'"><span class="glyphicon glyphicon-plus"></span></button>
    </div>
</body>
</html>
